#!/bin/sh
set -x
. zbrewfuncs
setjavaenv

zipdir=${TMP}/$$.gimzip.zipdir
mkdir ${zipdir}

sysin=${TMP}/$$.gimzip.sysin
mydir=$(callerdir ${0})
myhlq=`hlq`
smpmcs="${mydir}/../smpmcs/zbrew.mcs"
smprelf="${hlq}.SMPSAMP.SMPRELF.HW.REXX"

echo "
<GIMZIP description="zbrew sample for testing">
  <FILEDEF name="${smpmcs}"
           description="mcs file"
           archid="SMPMCS"
           type="SMPPTFIN">
  </FILEDEF>
  <FILEDEF name="${smprelf}"
           description="hw file"
           archid="F1"
           type="SMPRELF">
  </FILEDEF>
</GIMZIP>
" >${sysin}

drm -f "${smprelf}"
dcp "${mydir}/../smprelf/hw.rexx" "${smprelf}"

mvscmdauth --pgm=gimzip --smpdir="${zipdir}" --smpwkdir="${TMP}" --smpcpath="${SMPE_CLASSPATH}" --smpjhome="${SMPE_JAVAHOME}" --SYSUT2=DUMMY --SYSUT3=DUMMY --SYSUT4=DUMMY --smpout=stdout --sysprint=stdout --sysin=stdin 


